  </head>

  <body>
    <header class="header">
      <h2 class="header__title">Fit App</h2>
      <nav class="nav">
        <a class="nav__link" href="/routines">Routines</a>
        <a class="nav__link" href="/exercises">Exercises</a>
      </nav>
    </header>

    <%= yield %>

    <footer class="footer">
      <h2 class="footer__title">Fit App</h2>
      <p>All Rights Reserved</p>
    </footer>
  </body>
</html>
