<main class="main">
  <section>
    <h1>Routine: <%= @routine.name %></h1>
    <br>
    <table class="table">
      <tr>
        <th><strong>Exercise description</strong></th>
        <th><strong>Exercise intensity</strong></th>
      </tr>
      <% @routine.exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.description %></td>
          <td><%= exercise.intensity %></td>
        </tr>
      <% end %>
    </table>
  </section>
  <section class="section">
  </section>
  <button type="button" class="button button--secondary"><%= link_to "Edit", edit_routine_path(@routine.id) %></button>
  <button type="button" class="button"><%= link_to "Destroy", routine_path(@routine), data: {
                    method: :delete,
                    confirm: "Are you sure?"
                  } %></button>
</main>
