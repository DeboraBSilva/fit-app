<main class="main">
  <section>
    <h1>Exercise: <%= @exercise.description %></h1>
    <h2>Intensity: <%= @exercise.intensity %></h2>
    <br>
  </section>
  <section class="section">
  </section>
  <button type="button" class="button button--secondary"><%= link_to "Edit", edit_exercise_path(@exercise.id) %></button>
